<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/products">Productos</a></li>
                        <li class="breadcrumb-item active">{{product.title}}</li>
                    </ol>
                </nav>
                
                <h1 class="card-title">{{product.title}}</h1>
                <p class="card-text lead">{{product.description}}</p>
                
                <div class="row mt-4">
                    <div class="col-md-6">
                        <p><strong>Precio:</strong> ${{product.price}}</p>
                        <p><strong>Stock:</strong> {{product.stock}}</p>
                        <p><strong>Categoría:</strong> {{product.category}}</p>
                        <p><strong>Código:</strong> {{product.code}}</p>
                    </div>
                    <div class="col-md-6">
                        <p>
                            <strong>Disponibilidad:</strong> 
                            <span class="badge {{#if product.status}}bg-success{{else}}bg-danger{{/if}}">
                                {{#if product.status}}Disponible{{else}}No disponible{{/if}}
                            </span>
                        </p>
                        {{#if product.thumbnails.length}}
                        <div class="mt-3">
                            <strong>Imágenes:</strong>
                            <div class="mt-2">
                                {{#each product.thumbnails}}
                                <img src="{{this}}" alt="{{../product.title}}" class="img-thumbnail me-2" style="max-height: 100px;">
                                {{/each}}
                            </div>
                        </div>
                        {{/if}}
                    </div>
                </div>
                
                <div class="mt-4">
                    <button class="btn btn-success btn-lg add-to-cart" data-product-id="{{product._id}}">
                        Agregar al Carrito - ${{product.price}}
                    </button>
                    <a href="/products" class="btn btn-outline-secondary ms-2">Volver a Productos</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const addToCartBtn = document.querySelector('.add-to-cart');
    
    addToCartBtn.addEventListener('click', async function() {
        const productId = this.getAttribute('data-product-id');
        
        try {
            // En una implementación real, aquí se usaría el carrito del usuario logueado
            const response = await fetch('/api/carts/1/product/' + productId, {
                method: 'POST'
            });
            
            if (response.ok) {
                alert('Producto agregado al carrito exitosamente');
            } else {
                const error = await response.json();
                alert('Error: ' + error.error);
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Error al agregar producto al carrito');
        }
    });
});
</script>